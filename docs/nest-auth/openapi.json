    "info": {
        "title": "NestAuth API",
        "description": "",
        "version": "0.0.1",
        "contact": {}
    },
    "tags": [],
    "servers": [],
    "components": {
        "schemas": {
            "SignupRequestDto": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "description": "User email address"
                    },
                    "phone": {
                        "type": "string",
                        "description": "User phone number"
                    },
                    "password": {
                        "type": "string",
                        "description": "User password (min 8 characters)"
                    },
                    "tenantId": {
                        "type": "string",
                        "description": "Optional tenant ID for multi-tenant applications"
                    }
                },
                "required": [
                    "password"
                ]
            },
            "AuthResponseDto": {
                "type": "object",
                "properties": {
                    "accessToken": {
                        "type": "string",
                        "description": "JWT access token"
                    },
                    "refreshToken": {
                        "type": "string",
                        "description": "JWT refresh token"
                    },
                    "isRequiresMfa": {
                        "type": "boolean",
                        "description": "Whether the user requires MFA"
                    }
                },
                "required": [
                    "accessToken",
                    "refreshToken",
                    "isRequiresMfa"
                ]
            },
            "LoginRequestDto": {
                "type": "object",
                "properties": {
                    "providerId": {
                        "type": "string",
                        "description": "Provider ID"
                    },
                    "credentials": {
                        "type": "object",
                        "description": "Credentials"
                    },
                    "tenantId": {
                        "type": "string",
                        "description": "Tenant ID"
                    },
                    "createUserIfNotExists": {
                        "type": "boolean",
                        "description": "Create user if not exists"
                    }
                }
            },
            "RefreshTokenRequestDto": {
                "type": "object",
                "properties": {
                    "refreshToken": {
                        "type": "string",
                        "description": "Refresh token to get new access token"
                    }
                },
                "required": [
                    "refreshToken"
                ]
            },
            "MessageResponseDto": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string",
                        "description": "Response message"
                    }
                },
                "required": [
                    "message"
                ]
            },
            "Verify2faRequestDto": {
                "type": "object",
                "properties": {
                    "method": {
                        "type": "string",
                        "enum": [
                            "totp",
                            "sms",
                            "email"
                        ]
                    },
                    "otp": {
                        "type": "string",
                        "description": "The OTP to verify"
                    }
                },
                "required": [
                    "method",
                    "otp"
                ]
            },
            "Verify2faResponseDto": {
                "type": "object",
                "properties": {
                    "accessToken": {
                        "type": "string",
                        "description": "JWT access token"
                    },
                    "refreshToken": {
                        "type": "string",
                        "description": "JWT refresh token"
                    }
                },
                "required": [
                    "accessToken",
                    "refreshToken"
                ]
            },
            "ForgotPasswordRequestDto": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "description": "User email address"
                    },
                    "phone": {
                        "type": "string",
                        "description": "User phone number"
                    },
                    "tenantId": {
                        "type": "string",
                        "description": "Tenant ID"
                    }
                }
            },
            "ResetPasswordRequestDto": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "description": "User email address"
                    },
                    "phone": {
                        "type": "string",
                        "description": "User phone number"
                    },
                    "otp": {
                        "type": "string",
                        "description": "One-time password (OTP) received via email or SMS"
                    },
                    "newPassword": {
                        "type": "string",
                        "description": "New password"
                    },
                    "tenantId": {
                        "type": "string",
                        "description": "Tenant ID"
                    }
                },
                "required": [
                    "otp",
                    "newPassword"
                ]
            },
            "UserResponseDto": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "User ID"
                    },
                    "email": {
                        "type": "string",
                        "description": "User email"
                    },
                    "phone": {
                        "type": "string",
                        "description": "User phone number"
                    },
                    "isVerified": {
                        "type": "boolean",
                        "description": "User verification status"
                    },
                    "metadata": {
                        "type": "object",
                        "description": "User metadata"
                    }
                },
                "required": [
                    "id",
                    "email",
                    "phone",
                    "isVerified",
                    "metadata"
                ]
            },
            "DeviceInfoDto": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "Device ID"
                    },
                    "name": {
                        "type": "string",
                        "description": "Device name or identifier"
                    },
                    "lastActive": {
                        "format": "date-time",
                        "type": "string",
                        "description": "Last active timestamp"
                    },
                    "ipAddress": {
                        "type": "string",
                        "description": "IP address of the device"
                    }
                },
                "required": [
                    "id",
                    "name",
                    "lastActive",
                    "ipAddress"
                ]
            },
            "SendMfaCodeRequestDto": {
                "type": "object",
                "properties": {
                    "method": {
                        "type": "string",
                        "enum": [
                            "totp",
                            "sms",
                            "email"
                        ]
                    }
                },
                "required": [
                    "method"
                ]
            },
            "VerifyTotpSetupRequestDto": {
                "type": "object",
                "properties": {
                    "otp": {
                        "type": "string",
                        "description": "The OTP token to verify"
                    },
                    "secret": {
                        "type": "string",
                        "description": "Device secret to verify"
                    }
                },
                "required": [
                    "otp",
                    "secret"
                ]
            }
        }
    }
}